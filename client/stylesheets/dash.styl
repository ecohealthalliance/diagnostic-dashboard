.dashboard-container
  display flex
  flex-direction row
  align-items top
  justify-content flex-end

.diagnosis
  margin-left 10px
  flex 0 0 340px
  background-color gainsboro
  color black
  border-top 1px solid black
  border-bottom 2px solid gainsboro
  border-right 2px solid black
  overflow auto

  .reactive-table tr
    cursor pointer

.feature-section
  padding-bottom 40px

  h4
    padding 10px 3px
    clear both

  .label
    background-color #444
    float left
    padding 3px
    margin 1px 5px
    cursor pointer
    font-size 1.2em

.pane-container
  flex 1 1 auto
  display flex
  flex-direction row
  align-items left
  flex-wrap wrap

.pane
  flex 0 1 auto
  background-color white
  color black
  border 1px solid black
  overflow auto


.pane.maximized
  order -1

.pane.minimized > div
  pointer-events none
