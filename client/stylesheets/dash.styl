.dashboard-container
  display flex
  flex-direction row
  align-items flex-start
  justify-content flex-end

.loading-message ~ .dashboard-container
  display none

.loading-message
  margin 50px
  width 80%

  h1
    position relative
    left 100px
    top -90px

  .spinner-container
    position relative
    left 0
    top 0
    width 50px
    height 100px

.left-panel, .diagnosis
  margin-left 10px
  flex 0 0 340px
  background-color gainsboro
  color black
  border-top 1px solid black
  border-bottom 2px solid gainsboro
  border-right 2px solid black
  overflow auto
  // Vertical padding will break the code that positions the panes
  padding 0 5px

  .reactive-table tr
    cursor pointer

  h4
    padding 10px 8px
    clear both
    background-color #eee
    margin-left -5px
    margin-right -5px

.feature-section
  padding-bottom 40px

  .label
    background-color #444
    float left
    padding 3px
    margin 1px 5px
    cursor pointer
    font-size 1.2em
