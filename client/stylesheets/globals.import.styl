body
  font-family 'Open Sans', sans-serif

.btn-default
  background $background-color

.btn-plain
  border 0
  background none
  padding 0

.modal
  box-shadow 0 0 5px rgba(0,0,0,.5)
  border-radius 3px
  z-index 1000

.curtain
  cover()
  background rgba(0,0,0,.8)
  z-index 100

.font-awesome
  font-family FontAwesome
  -webkit-font-smoothing antialiased

.jumbotron
  background none

.space-btn-1
  margin-bottom 10px

.no-margin
  margin 0 !important

label
  .info
    display block
    font-size 90%
    font-weight normal
    color lighten(#333, 10%)
    margin-bottom 10px
