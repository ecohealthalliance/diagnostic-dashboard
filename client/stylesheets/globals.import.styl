body
  font-family 'Open Sans', sans-serif

.btn-default
  background $background-color

.btn-plain
  border 0
  background none
  padding 0

.modal
  box-shadow 0 0 5px rgba(0,0,0,.5)
  border-radius 3px
  z-index 1000

.curtain
  cover()
  background rgba(0,0,0,.8)
  z-index 100

.font-awesome
  font-family FontAwesome
  -webkit-font-smoothing antialiased

.jumbotron
  background none

.space-btn-1
  margin-bottom 10px

.no-margin
  margin 0 !important

.muted-text
  color #CCC

label
  .info
    display block
    font-size 90%
    font-weight normal
    color lighten(#333, 10%)
    margin-bottom 10px

.tooltip
  text-shadow none
  font-family 'Open Sans'
  > .tooltip-inner
    background-color alpha(black, 95%)

.no-results
  margin-top 20px
  padding 0 15px
  text-align center
  @extend .muted-text
  &::before
    display block
    content '\f002'
    icon()
    font-size 250%
    margin-bottom 10px

.remove-selection
.add-selection
  pointer()
  font-size 1.5em
  color $blue
  padding-top .3em
  &[disabled]
    cursor not-allowed

.remove-selection
  color $delete
