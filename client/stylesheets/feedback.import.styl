.feedback

  h2
    margin 0
    font-weight 700
  h3
    margin 0 0 5px 0
    font-weight 700
    font-size 1.1em

  textarea
    min-height 100px

  .form-group
    margin-bottom 20px
    &:last-of-type
      margin-bottom 0

  textarea
    margin-bottom 30px

  label
    margin-bottom 5px

  .control-label
    font-weight normal

  .modal-content
    border-radius 4px

  .modal-body
    padding 20px

  .modal-header
    background $primary-muted
    border-top-left-radius 4px
    border-top-right-radius 4px

  .modal-footer
    border 0
    padding 20px 20px 40px 20px

  .form-buttons
    width 100%

  button[type=submit]
    min-width 25%

  .disease-list
    margin 0 -5px 0 -5px
    display flex
    flex-flow row wrap

  .disease-list-item
    display inline-block
    flex 1 50%
    flex-grow 0
    padding 0 10px
    margin-bottom 10px
    font-size .95em
    label
      color #444

  .disease-button-container
    padding-left 0

  .remove-disease
  .add-disease
    pointer()
    font-size 1.5em
    color $blue
    padding-top .3em
    &[disabled]
      cursor not-allowed

  .remove-disease
    color $delete

  .added-disease
    margin-bottom 10px
