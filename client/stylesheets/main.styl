@import 'mixins.import'

$left-pane-width    = 350px
$background-color   = #f9f9f9
$header-height      = 50px
$primary            = #2B9DA1
$primary-muted      = muteColor($primary)
$primary-muted-dark = darken(muteColor($primary), 20%)
$confirm            = #4CBB43
$header-highlight   = $primary-muted
$delete             = #F23330

.btn-default
  background $background-color

.modal
  box-shadow 0 0 5px rgba(0,0,0,.5)
  border-radius 3px
  z-index 1000

.curtain
  cover()
  background rgba(0,0,0,.8)
  z-index 100

.font-awesome
  font-family FontAwesome
  -webkit-font-smoothing antialiased

.jumbotron
  background none

.space-btn-1
  margin-bottom 10px

