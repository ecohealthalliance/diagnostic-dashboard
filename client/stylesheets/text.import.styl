#text .label
  font-size 1em
  padding 0
  font-weight normal
  white-space normal

#text
  white-space pre-wrap

#text
  &.paper
    margin 0 auto 20px auto
    background-color white
    max-width 50em
    padding 2.5em 3em 3em
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    line-height 1.6em
    +below(800px)
      padding-left 1.5em
      padding-right 1.5em
  .label
    padding 0
    margin 0
    font-size 1em
    font-weight normal
    white-space pre-wrap
    text-shadow 0 1px rgba(100,100,100,.2)
    border-radius .1em
