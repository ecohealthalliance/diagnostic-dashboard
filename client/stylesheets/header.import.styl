.header
  background lighten(#EEE, 10%)
  min-height $header-height
  position relative
  border-bottom 2px solid #CCC

.branding-action
  float left
  margin-top 6px

.logo
  margin-left 15px
  display inline-block
  vertical-align middle
  a
    &:hover
    &:active
    &:focus
      text-decoration none
  h1
  h2
    display inline-block
    vertical-align middle
    margin 0
  h1
    bg('../../images/logo', 'png', 53px, 35px)
  h2
    font-size 11px
    padding-left 10px
    color #999

.action-call
  display inline-block
  vertical-align middle
  margin-left 25px
  .btn
    background-color desaturate(lighten($confirm, 80%),30%)
    border-color desaturate(lighten($confirm, 50%),30%)
    color #777
    text-shadow 0 1px 0 rgba(255,255,255,.2)
    padding 5px 12px
    font-size 13px
    i
      margin-right 5px
    &:hover
      background-color desaturate(lighten($confirm, 60%),30%)
      color darken($confirm, 90%)

.navbar-nav
  margin 0

.nav
  &.nav-main
    float right
  li
    a
      border-left 1px solid #CCC
      display inline-block
      text-align center
      color #666
      padding 14px 15px
      i
        padding-right 4px
      &:hover
        background-color lighten($primary-muted-dark, 50%)
        text-decoration none
        color #333

