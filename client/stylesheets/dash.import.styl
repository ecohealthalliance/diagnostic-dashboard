.dashboard-container
  position fixed
  top $header-height
  left 0
  right 0
  bottom 0
  height 100%

.loading-message ~ .dashboard-container
  // z-index hides the container, but still renders it so that visualizations
  // have the appropriate size.
  z-index -1

.loading-message
  padding 50px
  z-index 100
  background rgba(255,255,255,.85)
  position absolute
  top $header-height-border
  left 0
  right 0
  bottom 0

  h1
    position relative
    left 100px
    top -90px

  .spinner-container
    position relative
    left 0
    top 0
    width 50px
    height 100px

.left-panel
  position absolute
  margin 0
  border-right 2px solid #CCC
  background-color #FFF
  overflow-x scroll
  padding 0 10px
  width 350px
  top 0
  bottom 0

  .reactive-table tr
    cursor pointer

  .btn-group
    margin-bottom 10px

  h4
    padding 10px 8px
    clear both
    background-color $primary-muted
    margin-left -10px
    margin-right -10px
    cursor pointer
    border-bottom 2px solid #CCC
    &:hover
      background-color #CCC
      color black


.feature-section
.keypoints
  padding-bottom 40px

  .label
    float left
    margin 1px 5px 8px
    cursor pointer
    font-size 1em
    font-weight normal
    padding 7px 10px
    text-shadow 0 1px 1px rgba(0,0,0,.4)
    letter-spacing .03em
    box-shadow 0 1px 1px rgba(255,255,255,0)
    &:hover
      box-shadow 0px 0px 0px 2px rgba(100,100,100,.5)

  .label.selected
    box-shadow 0px 0px 0px 2px rgba(100,100,100,.9)

.features
  margin 40px 0 70px 0

.keypoint
  background-color darkgoldenrod
  color white
  border-radius 4px
  margin 5px
  padding 5px

.keypoint.selected
  background-color goldenrod

.find-btns
  margin-top 20px
  margin-bottom 20px
  a
    margin-top 10px
    display block
    &:first-of-type
      margin 0

#choose-view
  float none
  li
    padding 10px 20px
    text-transform capitalize
    color #555
    cursor pointer
    &:hover
      background darken($primary-muted, 5%)
    &.selected
      background-color darken($primary-muted, 10%)
      color #333
    .fa
      padding-right 5px

