.dashboard-container
  position fixed
  top $header-height
  left 0
  right 0
  bottom 0

.loading-message ~ .dashboard-container
  // z-index hides the container, but still renders it so that visualizations
  // have the appropriate size.
  z-index -1

.loading-message
  padding 50px
  z-index 100
  background rgba(255,255,255,.85)
  position absolute
  top $header-height
  left 0
  right 0
  bottom 0

  h1
    position relative
    left 100px
    top -90px

  .spinner-container
    position relative
    left 0
    top 0
    width 50px
    height 100px

.feature-section--header
.panel-header
  position relative
  padding 10px 8px
  background-color $primary-muted
  border-bottom 1px solid $primary-border
  font-weight 700
  h4
    font-weight bold
    margin 0
    transition 'font-size' .1s ease-in-out

.panel-header
  position absolute
  display flex
  align-items center
  min-height 50px
  display flex
  align-items center
  width 350px
  min-height 50px
  border-right 2px solid #CCC
  transition $transition-time ease-in-out
  z-index 10
  &.closed
    width 200px
    h4
      font-size 14px
  &.side-bar-toggle
    cursor pointer
    &:hover
      background darken($primary-muted, 5%)

.feature-section--header
  clear both
  margin-bottom 1em
  cursor pointer
  background-color #f9f9f9
  border-bottom-color darken(@background-color, 15%)
  margin-left -20px
  margin-right -20px
  &:hover
    background-color $primary-muted
    color black

.toggle-icon
  position absolute
  right 0
  top 0
  bottom 0
  width 50px
  display flex
  align-items center
  justify-content center
  font-size 1.5em
  color #444
  cursor pointer
  &:hover
    color black
    font-size 1.65em

.left-panel
  position absolute
  margin 0
  border-right 2px solid #CCC
  background-color #FFF
  overflow-x scroll
  -ms-overflow-style -ms-autohiding-scrollbar
  padding 0 20px
  width $left-pane-width
  top 50px
  bottom 0
  transition $transition-time ease-in-out
  opacity 1
  &.closed
    transform translate(-1 * $left-pane-width, 0)
    opacity 0

  .reactive-table
    width $left-pane-width - 2
    max-width $left-pane-width - 2
    margin-left -20px
    margin-right -20px
    font-size 13px
    tr
      cursor pointer
      &.selected
        background-color desaturate(lighten(#DEEDDC, 20%),40%)
      td
        max-width 32%
        &:first-of-type
          padding-left 15px
        &:last-of-type
          padding-right 15px
    th
      &:first-of-type
        padding-left 15px
      &:last-of-type
        padding-right 15px

  .btn-group
    margin-bottom 10px


.feature-section
.keypoints
  padding-bottom 10px

  .label
    float left
    margin 1px 5px 8px
    cursor pointer
    font-size 1em
    font-weight normal
    padding 7px 10px
    text-shadow 0 1px 1px rgba(0,0,0,.4)
    letter-spacing .03em
    box-shadow 0 1px 1px rgba(255,255,255,0)
    -webkit-font-smoothing subpixel-antialiased
    &:hover
      box-shadow 0px 0px 0px 2px rgba(100,100,100,.5)

  .label.selected
    box-shadow 0px 0px 0px 2px rgba(100,100,100,.9)

.features
  margin 25px 0 70px 0

.keypoint
  background-color darkgoldenrod
  color white
  border-radius 4px
  margin 5px
  padding 5px

.keypoint.selected
  background-color goldenrod

.keywords
  span
    display inline-block
    margin-bottom 5px
    min-height 20px
    margin-right 5px
    width 5px
    border-radius 1px

.find-btns
  margin-top 20px
  margin-bottom 20px
  a
    margin-top 10px
    display block
    &:first-of-type
      margin 0

#choose-view
  li
    text-transform capitalize
    color #555
    cursor pointer
    &:last-of-type
      border-right 0
    &:hover
      background darken($primary-muted, 5%)
    &.selected
      background-color darken($primary-muted, 10%)
      color #333
    .fa
      padding-right 10px
    +below(850px)
      flex-direction column
      text-align center
      .fa
        font-size 1em
        padding 0
        margin-bottom .2em
      span
        font-size .75em
        line-height 1em
    +below(650px)
      span
        display none
      .fa
        font-size 1.25em
        margin 0

.text-container
.symptom-container
.timeline-container
  padding-top 50px

.text-container
  padding-bottom 100px

.map-container
  position absolute
  top 40px
  bottom 0
  left 0
  right 0

.text-options
  text-align center
  font-size 12px
  a
    cursor pointer
    color $primary
    &:hover
      text-decoration none
      color $confirm
