.dashboard-container
  position fixed
  top $header-height
  left 0
  right 0
  bottom 0

.loading-message ~ .dashboard-container
  // z-index hides the container, but still renders it so that visualizations
  // have the appropriate size.
  z-index -1

.loading-message
  padding 50px
  z-index 100
  background rgba(255,255,255,.85)
  position absolute
  top $header-height
  left 0
  right 0
  bottom 0

  h1
    position relative
    left 100px
    top -90px

  .spinner-container
    position relative
    left 0
    top 0
    width 50px
    height 100px

.left-panel
  position absolute
  margin 0
  border-right 2px solid #CCC
  background-color #FFF
  overflow-x scroll
  -ms-overflow-style -ms-autohiding-scrollbar
  padding 0 20px
  width $left-pane-width
  top 0
  bottom 0

  .reactive-table
    width $left-pane-width - 2
    max-width $left-pane-width - 2
    margin-left -20px
    margin-right -20px
    font-size 13px
    tr
      cursor pointer
      &.selected
        background-color desaturate(lighten(#DEEDDC, 20%),40%)
      td
        max-width 32%
        &:first-of-type
          padding-left 15px
        &:last-of-type
          padding-right 15px
    th
      &:first-of-type
        padding-left 15px
      &:last-of-type
        padding-right 15px

  .btn-group
    margin-bottom 10px

  h4
    padding 10px 8px
    clear both
    background-color $primary-muted
    margin-left -20px
    margin-right -20px
    cursor pointer
    border-bottom 2px solid #CCC
    font-weight 700
    &:hover
      background-color #CCC
      color black
    &.diagnosis-heading
      cursor default
      margin-top 0
      &:hover
        background-color $primary-muted

.feature-section
.keypoints
  padding-bottom 10px

  .label
    float left
    margin 1px 5px 8px
    cursor pointer
    font-size 1em
    font-weight normal
    padding 7px 10px
    text-shadow 0 1px 1px rgba(0,0,0,.4)
    letter-spacing .03em
    box-shadow 0 1px 1px rgba(255,255,255,0)
    -webkit-font-smoothing subpixel-antialiased
    &:hover
      box-shadow 0px 0px 0px 2px rgba(100,100,100,.5)

  .label.selected
    box-shadow 0px 0px 0px 2px rgba(100,100,100,.9)

.features
  margin 25px 0 70px 0

.keypoint
  background-color darkgoldenrod
  color white
  border-radius 4px
  margin 5px
  padding 5px

.keypoint.selected
  background-color goldenrod

.keywords
  span
    display inline-block
    margin-bottom 5px
    min-height 20px
    margin-right 5px
    width 5px
    border-radius 1px

.find-btns
  margin-top 20px
  margin-bottom 20px
  a
    margin-top 10px
    display block
    &:first-of-type
      margin 0

#choose-view
  float none
  li
    padding 10px 20px
    text-transform capitalize
    color #555
    cursor pointer
    &:hover
      background darken($primary-muted, 5%)
    &.selected
      background-color darken($primary-muted, 10%)
      color #333
    .fa
      padding-right 5px

.text-container
.symptom-container
.timeline-container
  padding-top 40px

.text-container
  padding-bottom 100px

.map-container
  position absolute
  top 40px
  bottom 0
  left 0
  right 0
