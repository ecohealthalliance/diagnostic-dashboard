head
  title GRITS Diagnostic Dashboard

template(name="layout")
  h2.header
    a(href="/") GRITS
  h4.controls
    a.nav-btn(href="https://grits.ecohealth.io/gritsdb")
      i.fa.fa-database
      p Database
    a.nav-btn(href="/new")
      i.fa.fa-file-text-o.fa-file-text-o-large
      p New Diagnosis
    if isDashboard
      a.nav-btn.reset-panels(href="#")
        i.fa.fa-th-large.fa-th-large
        p All Panes
    a.nav-btn(href="/help")
      i.fa.fa-question
      p Help
    if signedIn
      a.nav-btn.sign-out(href="/sign-out")
        i.fa.fa-sign-out.sign-out
        p Sign Out
  +yield
