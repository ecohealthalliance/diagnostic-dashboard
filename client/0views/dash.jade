template(name="dash")
  .dashboard-container
    .diagnosis
      +reactiveTable collection=diseases settings=tableSettings
      .features
        each features
          .label(style="background-color:#{color}")
            if selected
              | &#10004;&nbsp;#{value}
            else
              | #{value}
    .pane-container
      .pane
        +geomap
      .pane
        +correlation
      .pane
        +dendrogram
      .pane
        +timeline
